---
pagination:
    data: timeline.entityOrder
    size: 25
    alias: entityId
permalink: '/timeline/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}/{% endif %}/index.html'
layout: base
title: Timeline
description: My timeline
---
<div class="width-control mx-auto">
    <div class="flex justify-between items-baseline">
        <h1 class="pageTitle">{{ title }}</h1>
        <div class="flex gap-x-3">
            <a href="/tags/" class="link">All tags</a>
            <a href="/photos/" class="link">All Photos</a>
        </div>
    </div>
    {%- for entityId in pagination.items %}
        {% set post = timeline.entities[entityId] %}
        {% include "timelinePost.njk" %}
    {% endfor %}
    {% include "pagination.njk" %}
</div>