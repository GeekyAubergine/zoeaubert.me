---
layout: base
pagination:
  data: blogposts.postOrder
  size: 1
  alias: postId
permalink: "/blog/{{ blogposts.posts[postId].slug }}/index.html"
eleventyComputed: 
  title: "{{ blogposts.posts[postId].title }}"
  description: "{{ blogposts.posts[postId].description }}"
---
{% set post = blogposts.posts[postId] %}
<div class="width-control mx-auto">
  <h1 class="pageTitle mb-1">{{post.title}}</h1>
  <div class="flex flex-row">
    <time class="secondary" datetime="{{date}}">{{ post.date | formatDate }}</time>
    <p class="secondary mx-1 mb-0">-</p>
    <p class="secondary mb-0">{{post.content | timeToRead}}</p>
  </div>
  <div class="flex flex-wrap mt-1 mb-4">
    {% for tag in post.tags %}
      <a href="/tags/{{ tag | slugify }}" class="link secondary mr-2">
                    #{{ tag | cleanTag }}
      </a>
    {% endfor %}
  </div>
  <div class="w-full content">
    {{ post.content | mdToHtml | safe }}
  </div>
</div>