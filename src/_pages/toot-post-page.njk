---
layout: base
pagination:
  data: toots.postOrder
  size: 1
  alias: postId
permalink: "{{ toots.posts[postId].slug }}/index.html"
eleventyComputed: 
  title: "{{ toots.posts[postId].date | formatDateTime }}"
  description: "{{ toots.posts[postId].title }}"
---
{% set post = toots.posts[postId] %}
<div class="width-control mx-auto">
  <h1 class="flex flex-row">
    <time class="secondary pageTitle text-xl" datetime="{{date}}">{{ post.date | formatDateTime }}</time>
  </h1>
  <div class="w-full content">
    {{ post.content | mdToHtml | safe }}
  </div>
  <div class="flex flex-wrap">
    {% for tag in post.tags %}
      <a href="/tags/{{ tag | slug }}" class="link secondary mr-2">
         #{{ tag }}
      </a>
    {% endfor %}
  </div>
  <p class="mt-6 mb-0">See original post on <a href="{{ post.originalUrl }}" class="link" target="_blank" rel="me">Mastodon</a>
  </p>
</div>