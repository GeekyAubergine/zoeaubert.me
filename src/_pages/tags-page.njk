---
layout: base
pagination:
  data: taggedPosts.allTags
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slug }}/index.html"
eleventyComputed:
    title: "#{{ tag }} posts"
---
<div class="width-control mx-auto">
  <div class="flex justify-between items-baseline">
    <h1 class="pageTitle mb-4">{{ title }}</h1>
    <a href="/tags/" class="link sm:hidden">All tags</a>
  </div>
  <div class="my-8"/>
  {%- for entityId in taggedPosts.entitiesByTag[tag] %}
    {%- set post = all.entities[entityId] %}
    {% include "timelinepost.njk" %}
  {% endfor %}
</div>