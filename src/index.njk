<h2 class="mainPageHeading">Status</h2>
<div class="flex my-4">
    {% if statuslol.fluentEmoji %}
        <img src="{{ statuslol.fluentEmoji.src }}" alt="{{ statuslol.fluentEmoji.alt }}" class="w-12 h-12 mr-2 m-0 p-0"/>
    {% else %}
        <div class="flex w-12 h-12 mr-2 m-0 p-0 justify-center items-center">
            <p class="text-4xl">{{ statuslol.emoji }}</p>
        </div>
    {% endif %}
    <div class="flex flex-col h-12 justify-center">
        <p>{{ statuslol.content | linkifyMarkdown | safe }}</p>
        <a href="{{ statuslol.link }}" class="secondary underline_custom" target="_blank" rel="noopener">{{statuslol.relativeTime}}</a>
    </div>
</div>
