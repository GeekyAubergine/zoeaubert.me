<a href="/blog" class="link">
    <h2 class="mainPageHeading">Marco Blogs</h2>
</a>
{%- for blogPost in collections.recentPosts %}
    {% include "blogPost.njk" %}
{% endfor %}
<a href="https://geekyaubergine.com" target="_blank" rel="noopener" class="link">
    <h2 class="mainPageHeading">Micro Blogs</h2>
</a>
{%- for micro in microblog %}
    <div class="mt-2 mb-6">
        <a href="{{ micro.url }}" target="_blank" rel="noopener" class="link">
            <time class="link" datetime="{{ micro.date }}">
                {{ micro.date }}
            </time>
            {% if micro.title %}
                - {{ micro.title }}
            {% endif %}
        </a>
        <p class="text my-1">{{ micro.summary }}</p>
    </div>
{% endfor %}
<h2 class="mainPageHeading">Socials</h2>
<div class="mt-4">
    {% for social in socials %}
        <div class="flex mb-3 last-of-type:mb-0">
            <a class="link text-x" href="{{ social.link }}" target="_blank" rel="me">{{ social.name }}</a>
            <span class="text ml-1 sm:ml-2">-</span>
            <span class="text ml-1 sm:ml-2">{{ social.description }}</span>
        </div>
    {% endfor %}
</div>