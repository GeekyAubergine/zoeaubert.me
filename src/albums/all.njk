---
layout: html
title: "All Albums"
eleventyComputed:
    image: "{{ albums.albumPhotos[albums.albums[albums.albumOrder[0]].coverPhotos[0]].thumbnailSmall.src | prefixCDN }}"
    imageAlt: "{{ albums.albumPhotos[albums.albums[albums.albumOrder[0]].coverPhotos[0]].alt }}"
---
<main>
    {% include "navbar.njk" %}
    <div class="wide">
        <div class="page-header">
            <h1 class="pageTitle">All Albums</h1>
        </div>
        {%- for albumId in albums.albumOrder %}
            {% set album = albums.albums[albumId] %}
            <div class="mb-4 mx-auto mt-2 sm:mt-4">
                <a href="{{ album.permalink | stripIndex }}" class="no-underline mb-4">
                    <h2 class="accent">
                        {{ album.date | formatDate }} - {{ album.title }}
                    </h2>
                </a>
                {% set photoIds = album.photoOrder %}
                {% include 'albumPhotoGrid.njk' %}
            </div>
        {% endfor %}
    </div>
    {% include "footer.njk" %}
</main>