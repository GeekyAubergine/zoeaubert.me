---
layout: base
---
<div class="width-control mx-auto">
    <h2 class="pageTitle mb-1">{{title}}</h2>
    <div class="flex flex-row mb-4">
        <time class="text secondary" datetime="{{date.toISOString()}}">{{ date | formatDate }}</time>
        <p class="secondary mx-1">-</p>
        <p class="secondary">{{content | timeToRead}} min</p>
    </div>
    <div class="w-full content">
        {{ content | safe }}
    </div>
</div>