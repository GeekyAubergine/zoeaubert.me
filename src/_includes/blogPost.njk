<div class="flex flex-col mt-2 mb-6 no-underline text">
    <a href="{{ post.url | stripIndex }}" class="flex flex-col no-underline">
        <h3 class="text-lg link font-normal mb-1">{{ post.title }}</h3>
    </a>
    <p>{{ post.data.description }}</p>
    <div class="flex flex-row mt-2">
        <time class="secondary" dateTime="{{post.date.toISOString()}}">{{post.date | formatDate}}</time>
        <p class="secondary mx-1">-</p>
        <p class="secondary">{{ post.content() | timeToRead }}</p>
    </div>
</div>