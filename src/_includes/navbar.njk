<nav>
    <div class="name-with-side">
        <div class="name-and-toggle">
            <a class="name" href="/">
                    Zoe Aubert
                </a>
            {% include "themeToggle.njk" %}
        </div>
        <button type="button" id="toggleNavLinks" class="mobile-link-toggle">
            <p>â˜°</p>
        </button>
        <div class="side-links">
            {% for link in socials %}
                {% if link.showInTopNav %}
                    <a
                class="link"
                href="{{ link.link }}"
                target="_blank"
                rel="me"
            >
                        {{ link.name }}
                    </a>
                {% endif %}
            {% endfor %}

        </div>
    </div>
    <div id="nav-links" class="hidden">
        <div class="mobile-links">
            {% for link in socials %}
                {% if link.showInTopNav %}
                    <a
                class="link"
                href="{{ link.link }}"
                target="_blank"
                rel="me"
            >
                        {{ link.name }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
        <div class="mobile-links">
            {% for link in navlinks %}
                <a
                class="link"
                href="{{ link.url }}"
                target="{{ link.target }}"
                rel="{{ link.rel }}"
            >{{ link.name }}</a>
            {% endfor %}
        </div>
    </div>
</nav>
<script>
    const pageNav = document.getElementById('nav-links');
    const toggleNavLinks = document.getElementById('toggleNavLinks');

    toggleNavLinks
        ?.addEventListener('click', () => {
            pageNav
                .classList
                .toggle('hidden');
        });
</script>