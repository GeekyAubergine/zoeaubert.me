<nav class="width-control mx-auto justify-center items-baseline mb-2">
    <div class="w-full flex-col width-control mx-auto justify-center items-baseline md:flex-row md:justify-between">
        <div class="w-full flex-row items-center justify-between my-2">
            <div class="flex-row justify-start">
                <a class="text-4xl h-full text-left mr-2" href="/">
                    <p class="m-0">Zoe Aubert</p>
                </a>
            </div>
            {% include "themeToggle.njk" %}
            <button type="button" id="toggleNavLinks" class="h-8 flex flex-1 justify-end items-center md:hidden">
                <p class="text-center m-0 p-0 text-2xl mb-0.5 accent">â˜°</p>
            </button>
        </div>
        <div class="flex-row w-full justify-between hidden">
            {% for link in socials %}
                {% if link.showInTopNav %}
                    <a
                class="accent"
                href="{{ link.link }}"
                target="_blank"
                rel="me"
            >
                        {{ link.name }}
                    </a>
                {% endif %}
            {% endfor %}

        </div>
    </div>
    <div id="nav-links" class="flex-row flex-wrap w-full justify-evenly hidden">
        {% for link in socials %}
            {% if link.showInTopNav %}
                <a
                class="accent min-w-[33%] text-center"
                href="{{ link.link }}"
                target="_blank"
                rel="me"
            >
                    {{ link.name }}
                </a>
            {% endif %}
        {% endfor %}
        {% for link in navlinks %}
            <a
                class="accent min-w-[33%] text-center"
                href="{{ link.url }}"
                target="{{ link.target }}"
                rel="{{ link.rel }}"
            >{{ link.name }}</a>
        {% endfor %}
    </div>
</nav>
<script>
    const pageNav = document.getElementById('nav-links');
    const toggleNavLinks = document.getElementById('toggleNavLinks');

    toggleNavLinks
        ?.addEventListener('click', () => {
            pageNav
                .classList
                .toggle('hidden');
        });
</script>