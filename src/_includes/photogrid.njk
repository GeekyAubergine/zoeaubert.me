<div class="flex w-full justify-center">
    <div class="largePhotoGrid">
        <div class="photo-grid grid gap-x-2 gap-y-2 mx-auto px-0 grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-48 sm:px-2">
            {% for photo in photos %}
                <div class="photo">
                    <a href="{{ photo.url }}" data-lightbox="photos" data-title="{{ photo.title }}">
                        <img src="{{ photo.url }}" alt="{{ photo.title }}" class="w-full h-full object-cover">
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>