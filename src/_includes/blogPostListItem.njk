<article>
    {# {% if post.hero %}
        <img src="{{ post.hero.src }}" alt="{{ post.hero.alt }}" class="mt-4 mb-2 max-w-half"/>
    {% endif %} #}
    <a class="accent no-underline" href="{{ post.permalink | stripIndex }}">
        <h3 class="accent text-xl font-normal my-0">{{ post.title }}</h3>
    </a>
    <p class="my-1">{{ post.description }}</p>
    <div class="flex-row">
        <time class="secondary" dateTime="{{post.date }}">{{post.date | formatDate}}</time>
        <p class="secondary mx-1 my-0">-</p>
        <p class="secondary my-0">{{ post.content | timeToRead }}</p>
    </div>
    <div class="flex-row flex-wrap mt-1">
        {% include "tagsList.njk" %}
    </div>
</article>
<hr/>