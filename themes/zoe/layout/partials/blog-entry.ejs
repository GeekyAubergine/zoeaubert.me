<article class="blog-entry">
	<a class="wrapper" href='<%- url_for(post.path) %>'>
		<div class="left" aria-hidden="true">
			<div class="left-icon">
				<% if (post.categories.filter(c => c.name === 'tech').length > 0) {%>
				<i class="fas fa-server"></i><!-- microchip -->
				<% } else { %>
				<i class="fas fa-home"></i>
				<% } %>
			</div>
		</div>
		<div class="right">
			<h3 class="title"><%= post.title %></h3>
			<% if (post.excerpt) { %>
				<div class="excerpt">
					<%- post.excerpt %><%- post.excerpt.endsWith('.') ? '..' : '...' %>
				</div>
			<% } %>
		</div>
	</a>
</article>
